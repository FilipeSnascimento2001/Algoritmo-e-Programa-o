import java.util.Scanner;// Desvio condicional simples

public class Main {
    public static void main(String[] args) {
        Scanner leitor = new Scanner(System.in);
        System.out.println("Um jogador somente irar passar para a segunda fase se atingir 1000 pontos.");
        int nota = leitor.nextInt();
        if ( nota >= 1000) {
            System.out.println("Passou para segunda fase");}
        { System.out.println("Proxima intrução"); }
        }
    }


import java.util.Scanner;// Desvio condicional simples

public class Main {
    public static void main(String[] args) {
        Scanner leitor = new Scanner(System.in);
        System.out.println("Faça um algoritmo que leia um número inteiro, se o número for maior que 20 imprima e divida por 2");
        int numero = leitor.nextInt();
        if ( numero >= 20) {
            int resultado = numero/2;
            System.out.println(numero + " Dividido por 2 é " +resultado );}
        { System.out.println("Proxima intrução"); }
        }
    }



import java.util.Scanner;// Exercicio 1
public class Main {
    public static void main(String[] args) {
        Scanner entrada = new Scanner(System.in);
        int num;
        System.out.println("Digite um número: ");
        num = entrada.nextInt();

        if ((num % 2) == 0) { // o resto da divisão por 2 tem que se "0" essa é a condição para separar se o numero é impar ou par
            System.out.println("O numero:" + num + " = par");
        }
        else {
            System.out.println("O numero:" + num + " = impar");
        }
        entrada.close();
    }
}


import java.util.Scanner;// Exercicio 2

public class Main{
    public static void main(String[] args) {
        Scanner entrada = new Scanner (System.in);
        int idade;
        System.out.println("Digite sua idade");
        idade = entrada.nextInt();

        if ( idade > 18 ) {
            System.out.println(idade + " Maior de idade");
        }
        else {
            System.out.println(idade +" menor de idade");
        }
        entrada.close();
    }
}


import java.util.Scanner;// Exercicio 3
public class Main {
    public static void main(String[] args) {
    Scanner e=new Scanner(System.in);
    int n1,n2,resultado;


    System.out.println("Digite dois número interio: ");
    n1 = e.nextInt();
    n2 = e.nextInt();

    if (n1 == n2){
        System.out.println("Os números inteiros são iguais ");}
    else if (n1 > n2) {
        resultado = n1 - n2;
        System.out.printf("A diferença do %d e o numero %d é: %d", n1, n2, resultado);}
    else {
        resultado = n2 - n1;
        System.out.printf("A diferença do %d e o numero %d é: %d", n2, n1, resultado);}

        }
    }

import java.util.Scanner;// exercicio 4
public class Main {
    public static void main(String[] args) {
    Scanner e=new Scanner(System.in);
    double n1,n2;


    System.out.println("Digite dois número interio: ");
    n1 = e.nextDouble();
    n2 = e.nextDouble();

    if (n1 == n2){
        System.out.println("Os números são iguais");}
    else if (n1 > n2) {
        System.out.printf("A ordem decrescente entre o números seria %.2f e %.2f", n1, n2);}
    else {
        System.out.printf("A ordem decrescente entre o números seria %.2f e %.2f ", n2, n1);}

        }
    }

