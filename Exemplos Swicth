import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        System.out.println("======Menu inicial=======");
        System.out.println("1-Cadastrar Produtos");
        System.out.println("2-Lista de Produtos");
        System.out.println("3-Sair do Sistema");
        System.out.println("======Escolha uma Opção======");

        Scanner entrada = new Scanner(System.in);

        int menu = entrada.nextInt();
        switch (menu) {
            case 1:
                System.out.println("Você escolheu a opção 1");
                System.out.println("Que é a opção de Cadastrar Produtos");
                break;
            case 2:
                System.out.println("Você escolheu a opção 2");
                System.out.println("Que é a opção de Lista de Produtos");
                break;
            case 3:
                System.out.println("Você escolheu a opção 3");
                System.out.println("Que é a opção de Sair do Sistema");
                break;
            default:
                System.out.println("Item de menu invalido");
        }
        entrada.close();

    }
}



import java.util.Scanner; // Filipe Silva  - Exercicio 1

public class Main {
    public static void main(String[] args) {
        System.out.println("=====Calendario semanal=====");
        System.out.println("1-Domingo");
        System.out.println("2-Segunda");
        System.out.println("3-Terça-feira");
        System.out.println("4-Quarta-feria");
        System.out.println("5-Quinta-feira");
        System.out.println("6-Sexta-feria");
        System.out.println("7-Sabado");
        System.out.println("===Escolha um dia da semana===");

        Scanner entrada = new Scanner(System.in); // Exercicio 1 Filipe Silva do Nascimento

        int menu = entrada.nextInt();
        switch (menu) {
            case 1:
                System.out.println("Você escolheu a opção 1");
                System.out.println("Domingo");
                break;
            case 2:
                System.out.println("Você escolheu a opção 2");
                System.out.println("Segunda-feria");
                break;
            case 3:
                System.out.println("Você escolheu a opção 3");
                System.out.println("Terça-feira");
                break;
            case 4:
                System.out.println("Você escolheu a opção 4");
                System.out.println("Quarta-feira");
                break;
            case 5:
                System.out.println("Você escolheu a opção 5");
                System.out.println("Quinta-feira");
                break;
            case 6:
                System.out.println("Você escolheu a opção 6");
                System.out.println("Sexta-feira");
                break;
            case 7:
                System.out.println("Você escolheu a opção 7");
                System.out.println("Sabado");
                break;

            default:
                System.out.println("Item escolhido invalido");
        }
        entrada.close();

    }
}


