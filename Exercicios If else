public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.println("Coloque um numero:");
        int num = sc.nextInt();

        if (num >= 50 && num <= 70){
            System.out.println("Pertence ao intervalo");
        }
        else{
            System.out.println("Não pertence ao intervalo");
        }
    }
}

import java.util.Scanner; // Exercicio 6 Filipe Silva Do Nascimento

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.println("Digite seu sexo (use M ou F)");
        String sexo = sc.nextLine();

        System.out.println("Digite sua altura em metros");
        double altura = sc.nextDouble();

        double peso;

        if (sexo.equalsIgnoreCase("M")){
            peso = (altura*72.7)- 58;
            System.out.printf("Peso ideal masculino: %.2f kg\n", peso);
        }
        else if (sexo.equalsIgnoreCase("F")){
            peso = (altura*44.7)- 44.7;
            System.out.printf("Peso ideal feminino: %.2f kg\n", peso);
        }
        else{
            System.out.println("Sexo invalido. Use M ou F.");
        }
    }
}


import java.util.Scanner; // Exercicio 7 Filipe Silva Do Nascimento

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Digite o salario:");
        double salario = sc.nextDouble();

        System.out.println("Digite os anos que trabalhou:");
        int anos = sc.nextInt();

        Double bonus;

        if (anos >= 5) {
             bonus = salario * 0.20;
        } else {
             bonus = salario * 0.10;
        }
        System.out.printf ("Bonus salarial é de %.2f", bonus);
    }
}


