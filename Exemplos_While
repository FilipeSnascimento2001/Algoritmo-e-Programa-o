public class Main { //Exemplos 1 de while (contador)
    public static void main(String[] args) {
        int contador;//declarando o contador
        contador = 1; //inicianlizando o contador

        while(contador <=100){
            System.out.print(contador + ",");
            contador++;//mesma coisa que utilizar o contador = contador +1
        }

    }
}


public class Main { //Exemplos de while 2 (declarando números divivel por 2)
    public static void main(String[] args) {
        int contador,resto; //declarando o contador e o resto.
        contador = 0; //inicianlizando o contador

        while(contador <=100) {
            resto = contador %2;

            if(resto==0) {
                System.out.println("O número " + contador + " é par");

            } //imprimir só os numeros divisivel por 2 o codigo para aqui.
            else { //Imprimir todos os números e declarar se é impar ou par, precisa impor a condição else.
                System.out.println("O número " + contador + " é impar");
            } contador++;
        }
    }
}


public class Main { // Exemplo de While 3(acumulador = somar todos os numeros)
    public static void main(String[] args) {
        int contador=1;
        int acumulador=0;

        while(contador <=100) {
            acumulador= acumulador + contador;
            contador++;
        }
        System.out.println("A soma é "+acumulador);
    }
}

import java.util.Scanner;
public class Main { // Exemplo de While 4(media de notas entre 5 alunos)
    public static void main(String[] args) {

        int contador;
        double nota, media,acumuladorNotas;
        contador = 0;
        acumuladorNotas = 0;

        Scanner entrada = new Scanner (System.in);
        while (contador <5) {
            contador++;
            System.out.println("digite uma nota: " + contador);//calcular media
            nota = entrada.nextInt();
            acumuladorNotas = acumuladorNotas + nota;

        }
            media = acumuladorNotas/contador;
            System.out.println("media: "+media);
            entrada.close();
        }
    }
